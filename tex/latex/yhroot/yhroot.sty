\DeclareSymbolFont{yh@largessymbols}{OMX}{yhex}{m}{n}
\DeclareMathRadical{\yh@sqrtsign}{symbols}{"70}{yh@largessymbols}{"70}
\DeclareRobustCommand\sqrt{\@ifnextchar[\yh@sqrt\yh@sqrtsign}
\def\yh@sqrt[#1]{\root #1\of}
\def\root#1\of{%
  \setbox\rootbox\hbox{$\m@th\scriptscriptstyle{#1}$}%
  \mathpalette\yh@r@@t}
\def\yh@r@@t#1#2{%
  \setbox\z@\hbox{$\m@th#1\yh@sqrtsign{#2}$}%
  \dimen@\ht\z@ \advance\dimen@-\dp\z@
  \mkern5mu\raise.6\dimen@\copy\rootbox
  \mkern-10mu\box\z@}

\endinput
